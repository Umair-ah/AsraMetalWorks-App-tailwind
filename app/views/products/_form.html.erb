<%= form_with(model: [product]) do |form| %>
    <div class="lg:grid lg:grid-cols-3">
    
    
        <div></div>

        <div class="bg-white shadow-md p-4 w-full mt-16 hover:shadow-lg transition:easie-in-out duration-300">
            <h1 class="text-center ftext-3xl font-bold text-slate-500 mb-3">Add A Product</h1>
            <%= form.label :name, class:"font-normal leading-normal font-bold text-md text-gray-500" %>
            <%= form.text_field :name, class:"px-2 py-1 text-xl mb-3 rounded border border-gray-300 block w-full focus:outline-none focus:border-gray-400 outline-none focus-within:outline-none focus:ring-2 focus:ring-gray-200", required: true %>



            <%= form.label :price, class:"font-normal leading-normal font-bold text-md text-gray-500" %>
            <%= form.number_field :price, class:"px-2 py-1 text-xl mb-3 rounded border border-gray-300 block w-full focus:outline-none focus:border-gray-400 outline-none focus-within:outline-none focus:ring-2 focus:ring-gray-200", required: true %>



            <%= form.label :description, class:"font-normal leading-normal font-bold text-md text-gray-500" %>
            <%= form.text_area :description, class:"px-2 py-1 text-xl mb-3 rounded border border-gray-300 block w-full focus:outline-none focus:border-gray-400 outline-none focus-within:outline-none focus:ring-2 focus:ring-gray-200", required: true %>


            <%= form.file_field :pic, class:"my-3", id: "files-upload", class:"px-2 py-1 text-xl mb-3 block w-full focus:outline-none focus:border-gray-400 outline-none focus-within:outline-none focus:ring-2 focus:ring-gray-200", required: true %>




            <%= form.label :furniture_style, class:"font-normal leading-normal font-bold text-md text-gray-500" %>
            <%= form.select :furniture_style, ['Metal Racks Furniture', 'Metal Office Furniture', 'Metal School Furniture'], { prompt: 'Select' }, class:"px-2 py-1 text-xl mb-3 rounded border border-gray-300 block w-full focus:outline-none focus:border-gray-400 outline-none focus-within:outline-none focus:ring-2 focus:ring-gray-200", required: true %>



            <%= form.submit "Create Product", class:"bg-rose-400 px-3 py-1 text-white shadow-md mb-10 mt-2 hover:bg-rose-600 transition:ease-in-out duration-300" %>
        </div>
  
    </div>



<% end %>