<%= form_for @product do |form| %>

    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", required: true%>

    <%= form.label :price %>
    <%= form.number_field :price, class:"form-control" , required: true%>

    <%= form.label :description %>
    <%= form.text_area :description, class:"form-control", required: true %>

    <%= form.label :furniture_style %>
    <%= form.select :furniture_style, ['Metal_Racks_Furniture', 'Metal_Office_Furniture', 'Metal_School_Furniture'], { prompt: 'Select' }, class:"form-select" , required: true%>

    <%= form.submit "Edit Product", class:" mt-3 btn btn-primary" %>

<% end %>